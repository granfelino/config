general
{
    output_format = "i3bar"
    colors = true
    interval = 5
}


order += "ipv6"
order += "wireless wlp0s20f3"
order += "ethernet enp0s20f0u2"
order += "disk /"
order += "cpu_usage"
order += "memory"
order += "battery 0"
order += "volume master"
order += "time"


ipv6
{
    format_up = %ip
    format_down = "no IPv6"
}


disk "/"
{
   format = "disk usage: %percentage_used" 
    low_threshold = 90
    format_below_threshold = ":( not a lot of disk space %percentage_used"
    threshold_type = percentage_used
}


wireless wlp0s20f3
{
    format_up = "wi-fi:%quality at %essid(%bitrate)"
    format_down = "no wi-fi"
}


ethernet enp0s20f0u2
{
    format_up = "tethering: %speed"
    format_down = "tethering: down"
}

battery 0
{
    path = "/sys/class/power_supply/BAT1/uevent"
    format = "battery status:%status %percentage"
    format_down = "no battery, lol"
    format_percentage = "%.02f%s"
    status_chr = "⚡"
    status_bat = ""
    status_unk = "unknown battery status!!!"
    status_full = "☻ full"
    low_threshold = 15
    threshold_type = percentage
    last_full_capacity = true
}


cpu_usage
{
    format = "CPU usage: %usage"
    max_threshold = 75
    format_above_threshold = "CPU IS ON FIRE: %usage"
}


memory
{
    format = "RAM: %used of %total"
    unit = Gi
    decimals = 1
}


time
{
    format = "%H:%M:%S %Y-%m-%d"
}


volume master
{
    format = "volume: %volume"
    format_muted = "muuuted"
    device = "pulse"
}

